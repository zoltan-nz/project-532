%h3 Simple form
=simple_nested_form_for @user do |simple|
  =simple.input :name
  =simple.input :password
  =simple.button :submit
  =simple.simple_fields_for :kids do |k|
    =k.input :name
    =k.input :age
    =simple.link_to_add 'Add a kid', :kids




%h3 Semantic form
=semantic_form_for @user do |f|
  =f.inputs do
    =f.input :name, label: 'Name:'
    =f.input :email, label: 'Email:'
  =f.semantic_fields_for :kid do |kid|
    =kid.inputs :name, :age, name: 'Kids'
  =f.semantic_fields_for :order do |order|
    =order.inputs :date, name: 'Orders'
  =f.actions