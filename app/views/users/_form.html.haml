=semantic_bootstrap_nested_form_for @user do |f|
  =f.inputs do
    =f.input :name, label: 'Name:'
    =f.input :email, label: 'Email:'
    =f.input :tag_list, label: 'Tags:'
  .well
    -#=f.semantic_fields_for :orders do |order|
      -#=order.input :date, as: :string
      .well
        =order.semantic_fields_for :meal do |m|
          =m.input :name, as: :select, collection: Meal.all
          =m.input :price, as: :string
      =order.link_to_add "Add a meal", :meal
  =f.actions